{
    "coc.source.file.shortcut": "File",
    "coc.source.around.shortcut": "?",
    //"suggest.disableKind": true,
    "suggest.completionItemKindLabels": {
        "keyword": "\uf1de",
        "variable": "\ue79b",
        "value": "\uf89f",
        "operator": "\u03a8",
        "constructor": "\uf0ad",
        "function": "\u0192",
        "reference": "\ufa46",
        "constant": "\uf8fe",
        "method": "\uf09a",
        "struct": "\ufb44",
        "class": "\uf0e8",
        "interface": "\uf417",
        "text": "\ue612",
        "enum": "\uf435",
        "enumMember": "\uf02b",
        "module": "\uf40d",
        "color": "\ue22b",
        "property": "\ue624",
        "field": "\uf9be",
        "unit": "\uf475",
        "event": "\ufacd",
        "file": "\uf723",
        "folder": "\uf114",
        "snippet": "\ue60b",
        "typeParameter": "\uf728",
        "default": "\uf29c"
    },
    "jedi": {
        "enable": true,
        "startupMessage": true,
        "executable.command": "jedi-language-server"
    },
    "languageserver": {
        // C++ configuration
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json"],
            "initializationOptions": {
                "cache": {
                    "directory": ".ccls-cache",
                    "format": "binary"
                },
                "client": {
                    "snippetSupport": true
                },
                "index": {
                    "onChange": true
                },
                "highlight": {
                    "lsRanges": true
                }
            }
        },
        // CMake configuration
        "cmake": {
            "command": "cmake-language-server",
            "filetypes": ["cmake"],
            "rootPatterns": [
                "build/"
            ],
            "initializationOptions": {
                "buildDirectory": "build"
            }
        }
    },
    "python.pythonPath": "/path/to/your/python",   // Đường dẫn tới Python bạn đang sử dụng (môi trường ảo hoặc hệ thống)
    "python.autoComplete": true,                     // Bật tự động hoàn thành
    "python.linting.enabled": true,                  // Bật kiểm tra lỗi
    "python.linting.pylintEnabled": true,            // Sử dụng pylint để kiểm tra lỗi (có thể thay bằng flake8, pyflakes...)
    "python.formatting.autopep8Path": "autopep8",    // Định dạng mã Python tự động với autopep8
    "python.analysis.indexing": true,                // Chỉ mục mã để tối ưu việc tìm kiếm
    "python.analysis.autoSearchPaths": true,         // Tự động tìm kiếm các thư viện và tệp liên quan
    "python.analysis.diagnosticMode": "workspace"   // Chế độ kiểm tra lỗi cho toàn bộ dự án
}

